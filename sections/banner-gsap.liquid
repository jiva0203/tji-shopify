<!-- sections/hero-gsap.liquid -->
<section class="hero-gsap" data-section-id="{{ section.id }}">
  <h1>{{ section.settings.heading }}</h1>
</section>

{% schema %}
{
  "name": "Hero (GSAP)",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Animated Hero"
    }
  ],
  "presets": [
    { "name": "Hero (GSAP)" }
  ]
}
{% endschema %}
